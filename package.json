{
    "name": "expense-splitter",
    "version": "1.0.0",
    "description": "A simple yet functional expense splitter built with React and Express",
    "main": "server.js",
    "scripts": {
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "server": "nodemon server.js",
        "client": "react-scripts start",
        "build": "react-scripts build",
        "start": "NODE_ENV=production node server.js",
        "eject": "react-scripts eject"
    },
    "keywords": [
        "expense",
        "splitter",
        "nodejs",
        "express",
        "react"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-scripts": "5.0.1",
        "recharts": "^3.7.0"
    },
    "devDependencies": {
        "concurrently": "^8.2.1",
        "nodemon": "^3.0.1"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "proxy": "http://localhost:5000"
}
